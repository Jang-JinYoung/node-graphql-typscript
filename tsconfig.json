{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@config/*": [
        "src/config/*"
      ]
    },
    "experimentalDecorators": true, // 이 부분 추가
    "emitDecoratorMetadata": true // 이 부분 추가
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}